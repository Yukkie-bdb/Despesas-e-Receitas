@model Despesas_e_Receitas.Models.Servico

@{
    ViewData["Title"] = "DELETAR - Receitas e Despesas";
}

<h1 class="mt-4 mb-4">Apagar Receitas e Despesas</h1>

<h5 class="alert alert-danger" role="alert">Deseja realmente apagar essa Receita / Despesa</h5>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">

            @if (Model.Categoria == 'R')
            {<span>RECEITA</span>}else{<span>DESPESA</span>}

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapexOpex)
        </dt>
        <dd class="col-sm-10">
            @if (Model.CapexOpex == 'O'){<span>CUSTO OPERACIONAL</span>}
            @if (Model.CapexOpex == 'N'){<span>NENHUM</span>}
            @if (Model.CapexOpex == 'C'){<span>CUSTO CAPITAL</span>}
            
        </dd>
    </dl>

    <form class="mt-3">
        <button class="btn btn-danger" asp-action="Remove" asp-route-id="@Model.Id">Apagar</button>
        <a class="btn btn-secondary ms-3" asp-action="Cancel">Cancelar</a>
    </form>
</div>